<%= simple_form_for(@point_of_interest) do |poi| %>

  <div class="form-inputs">
   	<%= poi.text_field :name, :autofocus => true, placeholder: 'Hotspot' %>
   	<%= poi.text_field :address, placeholder: 'Address'  %>
   	<%= poi.text_field :description, placeholder: 'Description' %>
  </div>

  <div class="form-actions">
  	<%= poi.submit "Create" %>
  </div>
<% end %>


